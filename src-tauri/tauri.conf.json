{
  "productName": "MemFlow",
  "version": "0.1.0",
  "identifier": "com.memflow.app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "MemFlow",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "transparent": false,
        "decorations": true
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": ["**"]
      }
    },
    "withGlobalTauri": false
  },
  "bundle": {
    "active": false,
    "targets": "all",
    "icon": [
      "icons/icon.png"
    ],
    "resources": [],
    "externalBin": [],
    "copyright": "",
    "category": "Utility",
    "shortDescription": "智能桌面活动记录与分析工具",
    "longDescription": "MemFlow 是一个智能桌面活动记录与分析工具，专注于视觉记忆功能。通过自动截图、OCR文本提取、AI分析等技术，帮助用户记录和分析计算机活动，构建个人知识图谱。"
  },
  "plugins": {}
}

