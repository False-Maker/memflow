{
  "name": "memflow",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "tauri": "tauri",
    "tauri:dev": "tauri dev",
    "tauri:build": "tauri build",
    "dev:all": "dev.bat",
    "dev:all:ps1": "powershell -ExecutionPolicy Bypass -File ./dev.ps1",
    "test": "cargo test --manifest-path src-tauri/Cargo.toml",
    "test:watch": "cargo watch -x 'test --manifest-path src-tauri/Cargo.toml'",
    "test:e2e": "playwright test",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0 || echo 'ESLint not configured'",
    "type-check": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.{ts,tsx,json,css}\" || echo 'Prettier not configured'",
    "version:patch": "bash scripts/version.sh patch || powershell -ExecutionPolicy Bypass -File scripts/version.ps1 patch",
    "version:minor": "bash scripts/version.sh minor || powershell -ExecutionPolicy Bypass -File scripts/version.ps1 minor",
    "version:major": "bash scripts/version.sh major || powershell -ExecutionPolicy Bypass -File scripts/version.ps1 major"
  },
  "dependencies": {
    "@tauri-apps/api": "^2.0.0",
    "clsx": "^2.1.1",
    "framer-motion": "^12.23.25",
    "lucide-react": "^0.556.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-force-graph-2d": "^1.25.4",
    "react-virtuoso": "^4.17.0",
    "recharts": "^3.5.1",
    "tailwind-merge": "^3.4.0"
  },
  "devDependencies": {
    "@tauri-apps/cli": "^2.0.0",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.2.2",
    "vite": "^5.0.8"
  }
}
